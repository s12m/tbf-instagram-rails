<!DOCTYPE html>
<html>
  <head>
    <title>Instagram clone with Ruby on Rails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Instagram clone with Ruby on Rails', root_path, class: 'navbar-brand' %>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to 'Your posts', posts_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Sign out', destroy_user_session_path, class: 'nav-link', method: :delete %></li>
          <% else %>
            <li class="nav-item"><%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-info' %></li>
            <li class="nav-item"><%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <% if notice %><div class="alert alert-success"><%= notice %></div><% end %>
    <% if alert %><div class="alert alert-danger"><%= alert %></div><% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
